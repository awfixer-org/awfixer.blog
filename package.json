{
	"name": "blog-template",
	"type": "module",
	"version": "1.1.0",
	"description": "A template for creating a blog with Astro",
	"author": "danielcgilibert",
	"license": "GPL-3.0-only",
	"repository": {
		"type": "git",
		"url": "https://github.com/danielcgilibert/blog-template"
	},
	"keywords": [
		"astro",
		"astrojs",
		"astro-template",
		"astro-blog",
		"astro-b"
	],
	"bugs": {
		"url": "https://github.com/danielcgilibert/blog-template/issues"
	},
	"scripts": {
		"dev": "npx tinacms dev -c \"astro dev\"",
		"start": "astro dev",
		"build": "npx tinacms build -c \"astro build\"",
		"sync": "astro sync",
		"preview": "wrangler pages dev ./dist",
		"postbuild": "pagefind --site dist",
		"format:check": "prettier --plugin-search-dir=. --check .",
		"format": "prettier --plugin-search-dir=. --write .",
		"lint": "eslint .",
		"pre-commit": "lint-staged",
		"prepare": "husky install"
	},
	"dependencies": {
		"@astrojs/check": "^0.9.4",
		"@astrojs/cloudflare": "^12.2.1",
		"@astrojs/node": "^9.0.2",
		"@astrojs/react": "^4.2.0",
		"@astrojs/rss": "4.0.11",
		"@tinacms/auth": "^1.0.10",
		"@tinacms/cli": "^1.8.2",
		"@types/node": "^22.13.0",
		"@types/react": "^19.0.8",
		"@types/react-dom": "^19.0.3",
		"astro": "5.2.3",
		"astro-font": "^1.0.0",
		"next-tinacms-s3": "^9.0.2",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"tinacms": "^2.6.2",
		"vite": "^6.0.11",
		"zod": "^3.24.1"
	},
	"devDependencies": {
		"@astrojs/mdx": "4.0.8",
		"@astrojs/sitemap": "3.2.1",
		"@astrojs/tailwind": "6.0.0",
		"@pagefind/default-ui": "^1.3.0",
		"@tailwindcss/typography": "0.5.16",
		"@typescript-eslint/parser": "^8.22.0",
		"clsx": "2.1.1",
		"eslint": "^9.19.0",
		"eslint-plugin-astro": "^1.3.1",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"husky": "^9.1.7",
		"lint-staged": "^15.4.3",
		"mdast-util-to-string": "^4.0.0",
		"motion": "^12.0.6",
		"pagefind": "^1.3.0",
		"prettier": "^3.4.2",
		"prettier-config-standard": "^7.0.0",
		"prettier-plugin-astro": "^0.14.1",
		"reading-time": "^1.5.0",
		"slugify": "^1.6.6",
		"tailwind-merge": "3.0.1",
		"tailwindcss": "4.0.3",
		"typescript": "^5.7.3"
	},
	"lint-staged": {
		"*.{astro,js,jsx,ts,tsx,md,mdx,json}": [
			"prettier --write --plugin-search-dir=."
		]
	},
	"packageManager": "pnpm@9.15.5"
}
